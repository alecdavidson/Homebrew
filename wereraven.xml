<?xml version="1.0" encoding="utf-8" ?>
<elements>
    <info>
        <name>Wereraven Lycanthropy</name>
        <description>Wereraven Lycanthropy</description>
        <author>Thatcher Caldwell</author>
    </info>

	<element name="Wereraven Lycanthropy" type="Item" source="Homebrew" id="ID_HB_WERERAVEN_LYCANTHROPY">
		<description>
			<p>Wereraven Lycanthropy</p>
		</description>
		<setters>
			<set name="category">Additional Feature</set>
			<set name="slot">misc</set>
			<set name="inventory-hidden">true</set>
		</setters>
		<rules>
			<select type="Racial Trait" name="Wereraven Lycanthropy" supports="Wereraven-Lycanthropy" optional="true" />
		</rules>
	</element>

	<!-- Wereraven -->

	<element name="Wereraven" type="Racial Trait" source="Homebrew" id="ID_HB_RACIAL_TRAIT_WERERAVEN">
		<supports>Wereraven-Lycanthropy</supports>
		<description>
			<p>Wereraven Lycanthropy</p>
			<div element="ID_HB_RACIAL_TRAIT_WERERAVEN_SHAPESHIFTER" />
			<div element="ID_HB_RACIAL_TRAIT_WERERAVEN_FLIGHT_SPEED" />
			<div element="ID_HB_RACIAL_TRAIT_WERERAVEN_RESISTANCE" />
			<div element="ID_HB_RACIAL_TRAIT_WERERAVEN_PASSIVE_PERCEPTION" />
			<div element="ID_HB_RACIAL_TRAIT_WERERAVEN_WEAPONS" />
		</description>
		<sheet display ="false">
			<description />
		</sheet>
		<rules>
			<grant type="Racial Trait" id="ID_HB_RACIAL_TRAIT_WERERAVEN_SHAPESHIFTER" />
			<grant type="Racial Trait" id="ID_HB_RACIAL_TRAIT_WERERAVEN_FLIGHT_SPEED" />
			<grant type="Racial Trait" id="ID_HB_RACIAL_TRAIT_WERERAVEN_RESISTANCE" />
			<grant type="Racial Trait" id="ID_HB_RACIAL_TRAIT_WERERAVEN_PASSIVE_PERCEPTION" />
			<grant type="Racial Trait" id="ID_HB_RACIAL_TRAIT_WERERAVEN_WEAPONS" />
		</rules>
	</element>

	<element name="Shapeshifter" type="Racial Trait" source="Homebrew" id="ID_HB_RACIAL_TRAIT_WERERAVEN_SHAPESHIFTER">
		<description>
			<p>Unknown</p>
		</description>
		<sheet action="Action">
			<description>Unknown</description>
		</sheet>
	</element>

	<element name="Wereraven Speed" type="Racial Trait" source="Homebrew" id="ID_HB_RACIAL_TRAIT_WERERAVEN_FLIGHT_SPEED">
		<description>
			<p>You have a flight speed of 50 ft in raven or hybrid form.</p>
		</description>
		<sheet usage="Raven or Hybrid Form">
			<description>You have a flight speed of 50 ft</description>
		</sheet>
	</element>

	<element name="Wereraven Immunities" type="Racial Trait" source="Homebrew" id="ID_HB_RACIAL_TRAIT_WERERAVEN_RESISTANCE">
		<description>
			<p>You are immune to bludgeoning, piercing, and slashing damage from non magical weapons.</p>
		</description>
		<sheet usage="Raven or Hybrid Form">
			<description>You are immune to bludgeoning, piercing, and slashing damage from non magical weapons.</description>
		</sheet>
	</element>

	<element name="Passive Perception" type="Racial Trait" source="Homebrew" id="ID_HB_RACIAL_TRAIT_WERERAVEN_PASSIVE_PERCEPTION">
		<description>
			<p>You have a Passive Perception of 15.</p>
		</description>
		<sheet>
			<description>You have a Passive Perception of 15.</description>
		</sheet>
	</element>

	<element name="Natural Weapons" type="Racial Trait" source="Homebrew" id="ID_HB_RACIAL_TRAIT_WERERAVEN_WEAPONS">
		<description>
			<p>In your raven or hybrid form you gain one natural weapons which you are considered proficienct with:</p>
			<ul>
			<li>Beak: Melee Weapon Attack, 1d4 + Strength piercing damage.</li>
			</ul>
		</description>
		<sheet usage="Bear or Hybrid Form">
			<description>
			You gain the following natural weapons:
			&#x2022; Beak: Melee Weapon Attack, 1d4 + {{wereraven weapon:modifier}} piercing damage.
			</description>
		</sheet>
		<rules>
			<stat name="wereraven weapon:modifier" value="strength:modifier" bonus="wereraven strength" />
		</rules>
	</element>

</elements>	